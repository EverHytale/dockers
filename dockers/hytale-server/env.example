# =============================================================================
# Hytale Dedicated Server - Environment Configuration
# =============================================================================
# Copy this file to .env and configure your settings:
#   cp env.example .env
# =============================================================================

# =============================================================================
# Memory Configuration (minimum 4GB recommended by Hytale)
# =============================================================================
MIN_MEMORY=4G
MAX_MEMORY=8G

# =============================================================================
# Network Configuration
# =============================================================================
# Default Hytale port: 5520 (QUIC/UDP protocol)
SERVER_PORT=5520
SERVER_BIND=0.0.0.0

# =============================================================================
# Server Configuration
# =============================================================================
# Authentication mode: authenticated (production) or offline (testing)
AUTH_MODE=authenticated

# Disable Sentry crash reporting (enable for plugin development)
DISABLE_SENTRY=false

# Use AOT cache for faster startup (JEP-514)
USE_AOT_CACHE=true

# =============================================================================
# Backup Configuration
# =============================================================================
BACKUP_ENABLED=false
BACKUP_FREQUENCY=30

# =============================================================================
# Token Authentication (alternative to /auth login device)
# =============================================================================
# These values are automatically set by ./scripts/hytale-auth.sh
# You can also set them manually if you have the tokens

# Server owner username
OWNER_NAME=

# Server owner UUID (format: xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx)
OWNER_UUID=

# Session token for Session Service API
SESSION_TOKEN=

# Identity token (JWT) for authentication
IDENTITY_TOKEN=

# =============================================================================
# OAuth2 Tokens (for automatic refresh)
# =============================================================================
# These are used by ./scripts/hytale-refresh.sh to renew expired tokens

# OAuth2 access token
ACCESS_TOKEN=

# OAuth2 refresh token
REFRESH_TOKEN=

# =============================================================================
# Build Configuration (only for local builds)
# =============================================================================
# Hytale credentials JSON for the downloader
# Only required when building the image locally
# HYTALE_CREDENTIALS={"your": "credentials"}
